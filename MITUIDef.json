        "osPlatform": "Windows",
        "imageReference": {
          "publisher": "MicrosoftWindowsServer",
          "offer": "WindowsServer",
          "sku": "2012-R2-Datacenter"
        },
        "count": 2,
        "visible": true
      }

    ],

    "steps": [
    ],
    "outputs": {
      "adminUsername": "[basics('adminUsername')]",
      "adminPassword": "[basics('adminPassword')]",
      "virtualMachineSize": "[basics('virtualMachineSize')]"
    }
  }
